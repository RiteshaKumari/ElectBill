<script>

    function closepop() {
        document.querySelector(".popdesign").style.transform = "scale(0)"
        document.querySelector('.overlay').style.display = "none"
    }

    function off() {
        document.querySelector(".popdesign").style.transform = "scale(0)"
        document.querySelector('.overlay').style.display = "none"
    }
    function popup() {
        document.querySelector(".popdesign").style.transform = "scale(1)"
        document.querySelector('.overlay').style.display = "block"
    }
</script>