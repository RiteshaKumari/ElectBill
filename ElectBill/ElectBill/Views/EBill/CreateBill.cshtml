        .addbtn:active {
            box-shadow: inset 0px 3px 7px #3c4fe0;
            transform: translateY(2px);
        }
   

    .popdesign {
         padding: 20px;
        background: #27292d;
        color: #fff;
        width: 40%;
        height: fit-content;
        overflow: auto;
        position: fixed;
        inset: 0;
        margin: auto;
        border-radius: 5px;
        transform: scale(0);
        transition: transform 0.6s ease-in-out;
        z-index: 10;
    }
    .overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(20, 30, 90, .8);
        transition: .6s;
        z-index: 2;
        cursor: pointer;
    }
    .CreateBcontainer{
